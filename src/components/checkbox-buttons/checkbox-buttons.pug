include ../checkbox-button/checkbox-button.pug
mixin checkboxButtons(options)
  .checkbox-buttons
    p(class='checkbox-buttons__title') checkbox buttons
    .checkbox-buttons__button
      +checkbox-button({name:"smoking", value: "smoking", label: "Можно курить"})
    .checkbox-buttons__button
      +checkbox-button({name:"pets", value: "pets", label: "Можно с питомцами"})
    .checkbox-buttons__button
      +checkbox-button({name:"guests", value: "guests", label: "Можно пригласить гостей (до 10 человек)"})

mixin richCheckboxButtons(options)
  .rich-checkbox-buttons
    p(class='rich-checkbox-buttons__title') rich checkbox buttons
    .rich-checkbox-buttons__button
      +checkbox-button({name:"hall", value: "hall", label: "Широкий коридор", isRich: "true", desc:"Ширина коридоров в номере не менее 91 см."})
    .rich-checkbox-buttons__button
      +checkbox-button({name:"invalid", value: "invalid", label: "Помощник для инвалидов", isRich: "true", desc:"На 1 этаже вас встретит специалист и проводит до номера."})
