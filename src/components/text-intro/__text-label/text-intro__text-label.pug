mixin text-intro__text-label(options)
  //-
    options.mod - модификатор для подписи
    options.text - текст в подписи  
  .text-intro__text-label
    -
      var textLabelMod =" text-intro__text-label_" + options.mod
      textLabelMod = options.mod == "" ? "" : textLabelMod
      
    p(class="text-intro__text-label" + textLabelMod)= options.text 