doctype
html
  head
    meta(charset='utf-8')
    meta(name='viewport' content='initial-scale=1.0, width=device-width')
    meta(name='keywords' content='form, elements')
    meta(name='description' content='Form Elements')
    title Form Elements
    link(rel='stylesheet' href='form-elements.scss')
    script(src='jquery-for-parcel.js')
    script(src='form-elements.js')
  body
    
    +checkboxButtons()
    +richCheckboxButtons()
    +radio({name: 'test1'})
    +radio({name: 'test2'})
    +radio({name: 'test3'})
    +toggle({name: 'offer'})

    +rate-button({rate: "4"})

    +bulletList

    +room-info

    +button({text: 'Click me', 
            isRegister: 'false',
            isRegisterRus: 'false',
            isWithArrow: 'false',
            transparent: 'false',
            isNoBorder: 'true'})

    .test
      +like-button({count: '12'})
