    +comment({text: 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.',
              userName: 'Мурад Сарафанов',
              lastActivity: '5 дней назад',
              likeCount: '12',
              imageUrl: '../images/form-elements/image.png',
              })
    br
    br
    +pagination

    br
    br
    br
    +exp-checkbox({
      type: 'closed',
      list: [
        { label: "Завтрак", checked: false, isRich: 'false' },
        { label: "Письменный стол", checked: true, isRich: 'false' },
        { label: "Стул для кормления", checked: true, isRich: 'false' },
        { label: "Кроватка", checked: true, isRich: 'false' },
        { label: "Телевизор", checked: false, isRich: 'false' },
        { label: "Шампунь", checked: false, isRich: 'false' },
        { label: "Телевизор", checked: false, isRich: 'false' },
        { label: "Шампунь", checked: false, isRich: 'false' },
      ],
    }) 
    br
    
    +text-field({type: "text",
                 placeholder: "ДД.ММ.ГГГГ" ,
                 isMasked: 'true',
                })

    br
    br
    br
    +sub-text-field({type: 'email', placeholder: 'Email', isMasked: 'false', link: 'fake.html'})
    +slider({footer: 'Стоимость за сутки пребывания в номере'})
